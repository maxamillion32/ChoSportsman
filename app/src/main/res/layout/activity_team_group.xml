<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Моя тима"
            android:textColor="@color/black_100"
            android:textSize="24sp"
            android:layout_gravity="bottom"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_group_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/soccer"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_group_24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="100 участников"
            android:textColor="@color/black_60"
            android:gravity="center_vertical"
            android:textSize="20dp"/>

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layoutDirection="rtl"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_member_1"
                android:layout_width="@dimen/img_group_member"
                android:layout_height="@dimen/img_group_member"
                android:layout_marginLeft="-16dp"
                android:src="@drawable/ic_social_vk"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_member_2"
                android:layout_width="@dimen/img_group_member"
                android:layout_height="@dimen/img_group_member"
                android:layout_marginLeft="-16dp"
                android:layout_toLeftOf="@+id/img_member_1"
                android:src="@drawable/drawer_header"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_member_3"
                android:layout_width="@dimen/img_group_member"
                android:layout_height="@dimen/img_group_member"
                android:layout_toLeftOf="@+id/img_member_2"
                android:src="@drawable/drawer_header"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Вид спорта:"
            android:textColor="@color/black_70"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/text_group_sportkind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Футбол"
            android:textColor="@color/black_100"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Наш зал:"
            android:textColor="@color/black_70"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Зеленоград, корпус 666"
            android:textColor="@color/black_100"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Командир:"
            android:textColor="@color/black_70"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="+7 ***"
            android:textColor="@color/black_100"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Группа Вконтакте:"
            android:textColor="@color/black_70"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="vk.com/losers"
            android:textColor="@color/black_100"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Встречаемся:"
            android:textColor="@color/black_70"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="29 февраля 2033 года"
                android:textColor="@color/black_70"
                android:textSize="20dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Показать календарь команды"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>